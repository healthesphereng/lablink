rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---

    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Fetch user profile to check role
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isLabAdmin(labId) {
      let userData = getUserData();
      return userData.role == 'lab_admin' && userData.labId == labId;
    }

    // --- Collection Rules ---

    // Users: Only owner can read/write their own profile
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }

    // Labs: Public read, Authenticated write
    match /labs/{labId} {
      allow read: if true;
      allow write: if isAuthenticated();
      allow delete: if false;
    }

    // Bookings:
    match /bookings/{bookingId} {
      // Create: Any authenticated user can book for themselves
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;

      // Read: Owner OR Lab Admin for that lab
      allow read: if isOwner(resource.data.userId) || 
                  (isAuthenticated() && isLabAdmin(resource.data.labId));

      // Update: Relaxed for debugging - allow any authenticated user to update status
      allow update: if isAuthenticated();
    }

    // Lab Tests: Public read, Authenticated write
    match /labTests/{testId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Test Packages: Public read, Authenticated write
    match /testPackages/{packageId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Results:
    match /results/{resultId} {
      // Read: Owner OR Lab Admin
      allow read: if isOwner(resource.data.userId) || 
                  (isAuthenticated() && isLabAdmin(resource.data.labId));
      
      // Create: Relaxed - allow any authenticated user
      allow create: if isAuthenticated();
      
      // Update: Relaxed - allow any authenticated user
      allow update: if isAuthenticated();
    }

    // Lab Claims: Authenticated users can create a claim
    match /lab_claims/{claimId} {
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow read: if isOwner(resource.data.userId);
    }
  }
}