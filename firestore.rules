rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Labs: Public read
    match /labs/{labId} {
      allow read: if true;
      allow write: if request.auth != null; // Restrict this in production!
    }

    // Bookings: Authenticated
    match /bookings/{bookingId} {
      allow create: if request.auth != null;
      allow read, update: if request.auth != null; // Simplified for now
    }

    // Users: Owner only
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Results: Owner only (or admin)
    match /results/{resultId} {
      allow read, write: if request.auth != null; // Simplified for debugging
    }

    // Notifications: Owner only
    match /notifications/{notificationId} {
      allow read, write: if request.auth != null; // Simplified for debugging
    }

    // Reminders: Owner only
    match /reminders/{reminderId} {
      allow read: if isOwner(resource.data.userId);
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Lab Tests & Packages: Public read
    match /labTests/{testId} { allow read: if true; allow write: if request.auth != null; }
    match /testPackages/{packageId} { allow read: if true; allow write: if request.auth != null; }
  }
}